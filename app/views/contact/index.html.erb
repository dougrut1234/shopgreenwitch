<p id="contact_title">CONTACT</p>


<%= image_tag("background_1.jpg", :id => "background") %>
<%= image_tag("background_1.jpg", :id => "background_2") %>

<div  class="container2">
  <form style="padding-top: -10%;" id="contact" action="" method="post" style="clear: left;">
    <h3>Talk To Us</h3>
    <h4>Our coven is commited to making your Green Witch experiences as magical as possible!</h4>
    <fieldset>
      <input placeholder="Your name" type="text" tabindex="1" required autofocus>
    </fieldset>
    <fieldset>
      <input placeholder="Your Email Address" type="email" tabindex="2" required>
    </fieldset>
    <fieldset>
      <input placeholder="Your Zip Code" type="zip" tabindex="3" required>
    </fieldset>
    <fieldset>
      <textarea placeholder="Type your Message Here." tabindex="5" required></textarea>
    </fieldset>
    <fieldset id="submit-div">
      <button name="submit" type="submit" id="contact-submit" data-submit="...Sending">Submit</button>
    </fieldset>
  </form>
</div>


</body>

